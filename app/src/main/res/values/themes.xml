<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ABDMApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryVariant">@color/buttonColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@android:color/white</item>

        <item name="android:textColorPrimary">@android:color/white</item>

    </style>


    <style name="HeadlineBase" parent="TextViewStyle">

    </style>

    <style name="Headline1" parent="HeadlineBase">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>

    <style name="Headline2" parent="HeadlineBase">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="Headline3" parent="HeadlineBase">
        <item name="android:fontFamily">@font/nunitosans_semibold</item>
    </style>

    <style name="Headline4" parent="HeadlineBase">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>

    <style name="Headline5" parent="HeadlineBase">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>

    <style name="Headline6" parent="HeadlineBase">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>

    <!-- TEXTVIEW STYLE START-->
    <style name="ToolbarStyle">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="RoundStyleButton" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogThemeGeneral" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/success</item>
    </style>

    <style name="DialogThemeWarning" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/warning</item>
    </style>

    <style name="DialogThemeBlocker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/error</item>
    </style>

    <style name="ScreenTheme" >
        <item name="android:background">@color/bgColor</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>