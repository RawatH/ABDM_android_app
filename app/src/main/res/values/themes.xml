<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ABDMApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@android:color/white</item>

        <item name="android:textColorPrimary">@android:color/white</item>

    </style>



    <style name="Headline1" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>
    <style name="Headline2" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>
    <style name="Headline3" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_semibold</item>
    </style>
    <style name="Headline4" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>
    <style name="Headline5" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>
    <style name="Headline6" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>

    <!-- TEXTVIEW STYLE START-->
    <style name="ToolbarStyle">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="RoundStyleButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="TextViewStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>